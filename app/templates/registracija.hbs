<div class="registrationPage">
<!-- Background Image -->
    <div class="img img-responsive pozadinaRegistracije cover-screen"></div>
  <div class="container">
    <div class="row">
      <form class="distinct-page-form col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 col-lg-8 col-lg-offset-2 ">
        <div class="col-xs-12 text-center">
          <h1>Kreiranje korisničkog računa</h1>
          <hr class="h-divider" />
        </div>

        <div class="col-xs-12">

           <div class="form-group pomjereniTextBox">
            <label for="inputIme1">Ime i prezime:</label><br>
            {{#if imeError}}
            <span class="greskaUnosa">Ime se može sastojati samo od slova i znaka -!</span>
            {{/if}}
            {{input type="text" class="form-control" id="inputIme1" placeholder="Ime" value=ime}}

          </div>
          <div class="form-group pomjereniTextBox">
            <label for="inputUsername1">Korisničko ime:</label><br>
            {{#if usernameError}}
            <span class="greskaUnosa">{{imeVarijable}}</span>
            {{/if}}
            {{input type="text" class="form-control" id="inputUsername1" placeholder="Username" value=username}}
          </div>

          <div class="form-group pomjereniTextBox">
            <label for="inputPassword3">Lozinka:</label><br>
            {{#if passwordError}}
            <span class="greskaUnosa">Password mora imati minimalno 6 karaktera i to samo slova, brojeve i znakove +-_*:.,;?!$#!</span>
            {{/if}}
            {{input type="password" class="form-control" id="inputPassword3" placeholder="Password" value=password}}
          </div>

          <div class="form-group pomjereniTextBox">
            <label for="inputEmail3">Email:</label><br>
            {{#if emailError}}
            <span class="greskaUnosa">Morate unijeti validan email!</span>
            {{/if}}
            {{input type="email" class="form-control" id="inputEmail3" placeholder="Email" value=email}}
          </div>

          <div class="form-group pomjereniTextBox">
            <label for="inputPassword3_pon">Ponovite lozinku:</label><br>
            {{#if ponovljeniPassError}}
            <span class="greskaUnosa">Unosi lozinke se ne podudaraju.</span>
            {{/if}}
            {{input type="password" class="form-control" id="inputPassword3_pon" placeholder="Password" value=ponovljeniPass}}
          </div>
          
          {{#if serverSuccess}}
            <p>Uspješno ste registrovani!</p>
          {{/if}}
          {{#if serverError}}
            <p>Nažalost, došlo je do greške prilikom registracije.</p>
            <p>{{serverErrorText}}</p>
          {{/if}}
                    
          <div class="form-group text-center">
              <button type="submit" class="btn btn-success" {{action 'register'}}>Registruj se</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
